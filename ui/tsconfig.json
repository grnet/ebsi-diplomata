{
  "extends": "@digigov/cli-build/tsconfig.base",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "ui/*": [
        "src/*"
      ]
    },
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [
      "node",
      "jest",
      "react"
    ]
  }
}